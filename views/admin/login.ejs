<%-include("../layouts/header.ejs")%>





<div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h2 class="text-center text-dark mt-5">Admin Login</h2>
        <h4 class="text-center text-success"><%= locals.message ? message: "" %></h4>
        <div class="card my-5">
          <form class="card-body cardbody-color p-lg-5" action="/admin" method="POST">
            <div class="text-center">
              <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                width="200px" alt="profile">
            </div>
            <div class="mb-3">
              <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"
                placeholder="Email" required>
            </div>
            <p class="text-danger"><%= locals.validationErrors && locals.validationErrors.invalidEmail ? locals.validationErrors.invalidEmail : "" %></p>
            <div class="mb-3">
              <input type="password" name="password" class="form-control" id="password" placeholder="password" required>
            </div>
            <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Login</button></div>
           
          </form>
        </div>
  
      </div>
    </div>
  </div>
  


<%-include("../layouts/footer.ejs")%>
