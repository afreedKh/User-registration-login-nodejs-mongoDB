<%-include("../layouts/header.ejs")%>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center text-dark mt-5">Edit User</h2>
      <div class="card my-5">
        <form class="card-body cardbody-color p-lg-5" action="" method="post">
          <div class="text-center">
          </div>
          <div class="mb-3">
            <input type="text" class="form-control" id="name" name="name" value="<%= userData.name%>" aria-describedby="emailHelp"
              placeholder="Enter Name" required>
          </div> 
          
          <div class="mb-3">
            <input type="email" name="email" class="form-control" id="email" placeholder="Enter Email" value="<%= userData.email%>" required>
           
          </div>
          
          <div class="mb-3">
            <input type="text" name="mno" class="form-control" id="mno" placeholder="Enter Mobile" value="<%= userData.mobile%>" required>
            
          </div>
          <div class="mb-3">
            <input type="number" name="age" class="form-control" id="age" placeholder="Enter Age" value="<%= userData.age%>" required>
          </div>
          <div class="mb-3">
            <input type="text" name="place" class="form-control" id="place" placeholder="Enter Place" value="<%= userData.place%>" required>
          </div>
          <input type="hidden" name="id" value="<%=userData._id%>">
          <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Update User</button></div>
        </form>
      </div>
      <a href="/admin/dashboard"><button type="submit" class="btn btn-primary px-5 mb-5 w-100">Go to Dashboard</button></a>
    </div>
  </div>
</div>

<%-include("../layouts/footer.ejs")%> 

